@page "/blog"
@using System.Net.Http.Json
@inject HttpClient Http
@inject VVG.Web.Services.MetadataService MetadataService

<HeroBanner Title="Digital Insights" 
    Subtitle="A curated collection of articles, analyses, and perspectives on technology, strategy, and the future of business." />

<section class="container py-5">
    @if (posts is null)
    {
        <p class="text-center">Loading...</p>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in posts)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 p-4">
                        <h4 class="serif mb-3"><a href="/blog/@p.slug" class="text-dark">@p.title</a></h4>
                        <div class="mt-auto mono border-top pt-3 d-flex justify-content-between">
                            <span>@p.date</span>
                            <span>@p.readTime MIN READ</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

@code {
    class Post
    {
        public int id { get; set; }
        public string? title { get; set; }
        public string? slug { get; set; }
        public
    string? date
        { get; set; }
        public int readTime { get; set; }
    }
    Post[]? posts;

    protected override async Task OnInitializedAsync()
    {
        MetadataService.SetPageMetadata(new PageMetadata
        {
            Title = "Blog - VVG ONLINE",
            Description = "Insights and articles from VVG ONLINE.",
            Keywords = "blog,insights,articles",
            Image = "https://test.vvgonline.net/assets/images/banners/blog.png",

            OgType = "website",
            OgTitle = "Blog - VVG ONLINE",
            OgDescription = "Insights and articles from VVG ONLINE.",
            OgImage = "https://test.vvgonline.net/assets/images/banners/blog.png",
            OgUrl = "https://test.vvgonline.net/blog",

            TwitterCard = "summary_large_image",
            TwitterSite = "@vvgonline",
            TwitterCreator = "@vvgonline",
            TwitterTitle = "Blog - VVG ONLINE",
            TwitterDescription = "Insights and articles from VVG ONLINE.",
            TwitterImage = "https://test.vvgonline.net/assets/images/twitter-cards/blog.png"
        });

        var doc = await Http.GetFromJsonAsync<BlogDoc>("assets/data/blog-posts.json");
        posts = doc?.posts;
    }

    class BlogDoc { public Post[]? posts { get; set; } }
}