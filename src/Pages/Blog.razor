@page "/blog"
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>Blog</PageTitle>

<h2>Blog</h2>

@if (posts is null)
{
    <p>Loading...</p>
}
else
{
    <ul>
        @foreach (var p in posts)
        {
            <li><a href="/blog/@p.slug">@p.title</a> â€” <small>@p.date (@p.readTime min)</small></li>
        }
    </ul>
}

@code {
    class Post
    {
        public int id { get; set; }
        public string? title { get; set; }
        public string? slug { get; set; }
        public
    string? date
        { get; set; }
        public int readTime { get; set; }
    }
    Post[]? posts;

    protected override async Task OnInitializedAsync()
    {
        var doc = await Http.GetFromJsonAsync<BlogDoc>("/data/blog-posts.json");
        posts = doc?.posts;
    }

    class BlogDoc { public Post[]? posts { get; set; } }
}