@inherits LayoutComponentBase
@inject IJSRuntime JS

<CascadingValue Value="this">
    <MetaTags />
    <div @onkeydown="HandleKeyDown" @ref="mainLayoutDiv" tabindex="0">
        <SystemPanel />

        <main style="">
            <article class="content px-4">
                @Body
            </article>
        </main>

        <div id="ai-terminal" class="@(isTerminalOpen ? "" : "terminal-closed")">
            <div class="terminal-header" @onclick="ToggleTerminal">
                <span class="terminal-title">
                    <i class="bi bi-robot me-2 w-75 px-2 py-1 bg-dark fw-5"></i>
                    VIKAS_AI_AGENT_V0.108
                </span>
                <span class="terminal-controls">
                    <span class="control-dot"></span>
                    <span class="control-dot"></span>
                </span>
            </div>
            <div id="terminal-body" class="terminal-body">
                <div id="chat-output" class="chat-output">
                    <div class="system-msg">// SECURE CONNECTION TO VVG ONLINE's VIKAS AI AGENT ESTABLISHED...</div>
                    <div class="system-msg">// AGENT READY. HOW CAN I ASSIST YOU WITH YOUR VISION?</div>
                </div>
                <div class="terminal-input-area">
                    <span class="terminal-prompt">></span>
                    <input class="text-accent fw-6 large" type="text" id="user-input" placeholder="START TYPING HERE..." autocomplete="off">
                </div>
            </div>
        </div>
        <div id="canvas-container"></div>
    </div>
</CascadingValue>

@code {
    private ElementReference mainLayoutDiv;

    public bool isTerminalOpen = false;

    public void ToggleTerminal()
    {
        isTerminalOpen = !isTerminalOpen;
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await mainLayoutDiv.FocusAsync();
        }
    }

    public void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "F10")
        {
            ToggleTerminal();
        }
    }
}