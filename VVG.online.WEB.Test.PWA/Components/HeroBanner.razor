@* Animated hero banner for 100vh sections *@

<div class="hero-banner @Class" style="background: linear-gradient(135deg, @PrimaryColor 0%, @SecondaryColor 100%); 
     min-height: 100vh; display: flex; align-items: center; justify-content: center; color: white; 
     text-align: center; padding: 40px 20px;">
    
    <div class="hero-content" style="max-width: 900px; animation: fadeInUp 1s ease-out;">
        <h1 style="font-size: 4.236rem; font-family: 'EB Garamond', serif; margin-bottom: 20px; font-weight: 700;">
            @Title
        </h1>
        
        <p style="font-size: 1.618rem; font-family: 'IBM Plex Sans', sans-serif; margin-bottom: 30px; 
                  opacity: 0.95; line-height: 1.618;">
            @Subtitle
        </p>
        
        @if (!string.IsNullOrEmpty(ButtonText))
        {
            <button class="btn btn-lg btn-warning" @onclick="OnButtonClick" title="@ButtonTitle" 
                    style="padding: 15px 40px; font-weight: 600; border-radius: 8px;">
                @ButtonText
            </button>
        }
    </div>

    <style>
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .hero-banner svg {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: auto;
        }
    </style>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Welcome";
    [Parameter] public string Subtitle { get; set; } = "";
    [Parameter] public string ButtonText { get; set; } = "";
    [Parameter] public string ButtonTitle { get; set; } = "";
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public string PrimaryColor { get; set; } = "#0f172a";
    [Parameter] public string SecondaryColor { get; set; } = "#1f2937";
    [Parameter] public EventCallback OnButtonClick { get; set; }
}
