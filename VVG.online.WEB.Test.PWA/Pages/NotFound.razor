@page "/not-found"
@layout MainLayout

<div class="not-found-container">
    <div class="not-found-content">
        <h1 class="not-found-title">404</h1>
        <h2 class="not-found-heading">Page Not Found</h2>
        <p class="not-found-message">Sorry, the page you are looking for does not exist.</p>
        <a href="/" class="not-found-link">Go back home</a>
    </div>
</div>

<style>
    .not-found-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 1rem;
        @* background-color: #f8f9fa; *@
    }

    .not-found-content {
        text-align: center;
        max-width: 560px;
        padding: 2.25rem;
        background: var(--color-dark-bg);
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(16, 24, 40, 0.06);
    }

    .not-found-title {
        font-size: 4rem;
        font-weight: 700;
        color: rgba(0, 0, 0, 0.6);
        margin-bottom: 0.25rem;
    }

    .not-found-heading {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-text-dark);
        margin-bottom: 1rem;
    }

    .not-found-message {
        color: rgba(0, 0, 0, 0.6);
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .not-found-link {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background-color: var(--color-primary);
        color: var(--color-text-dark);
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.2s, transform 0.12s;
    }

    .not-found-link:hover {
        transform: translateY(-3px);
    }
</style>