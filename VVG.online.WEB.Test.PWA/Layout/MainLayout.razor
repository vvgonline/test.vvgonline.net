@inherits LayoutComponentBase
@inject ThemeService ThemeService
@inject IJSRuntime JS
@inject NavigationManager NavManager
@using VVG.online.WEB.Test.PWA.Components

<div class="main-wrapper">
    <Header />

    <main class="main-content">
        @Body
    </main>

    <Footer />
</div>

<CookieConsent />
<ScrollToTop />
<WhatsAppButton />

@code {
    protected override void OnInitialized()
    {
        ThemeService.OnThemeChanged += ThemeChangedHandler;
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= ThemeChangedHandler;
    }

    private void ThemeChangedHandler()
    {
        _ = ApplyThemeAsync();
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var saved = await JS.InvokeAsync<string>("getTheme");
                if (!string.IsNullOrEmpty(saved) && !string.Equals(saved, ThemeService.CurrentTheme, StringComparison.OrdinalIgnoreCase))
                {
                    ThemeService.CurrentTheme = saved;
                }
                else
                {
                    await JS.InvokeVoidAsync("setTheme", ThemeService.CurrentTheme);
                }
            }
            catch
            {
                // ignore - best effort
            }
        }
    }

    private async Task ApplyThemeAsync()
    {
        try { await JS.InvokeVoidAsync("setTheme", ThemeService.CurrentTheme); } catch { }
    }
}