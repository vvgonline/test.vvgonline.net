@using VVG.Web.Models

<section class="blog-hero py-5 border-bottom border-warning">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                @if (Post.Category != null)
                {
                    <div class="mb-3">
                        <span class="badge bg-warning text-dark">@Post.Category</span>
                    </div>
                }
                
                <h1 class="display-4 fw-bold mb-3">@Post.Title</h1>
                
                @if (Post.Tags != null && Post.Tags.Length > 0)
                {
                    <div class="mb-3">
                        @foreach (var tag in Post.Tags)
                        {
                            <span class="badge bg-secondary me-2">
                                <i class="text-warning me-1">#</i>
                                @tag
                                </span>
                        }
                    </div>
                }
                
                <p class="lead opacity-75 mb-4">@Post.Excerpt</p>
                
                <div class="d-flex gap-3 align-items-center opacity-75 small">
                    <span><i class="bi bi-calendar3 me-1"></i>@Post.PublishedAt.ToString("MMMM dd, yyyy")</span>
                    <span><i class="bi bi-clock me-1"></i>@Post.TimeToRead min read</span>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter, EditorRequired]
    public BlogPost Post { get; set; } = null!;
}
