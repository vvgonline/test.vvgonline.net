    protected override void OnInitialized()
    {
        MetadataService.SetPageMetadata(new PageMetadata
        {
            Title = "About VVG ONLINE",
            Description = "Learn about VVG ONLINE's mission, philosophy, and our commitment to driving digital transformation and innovation.",
            Keywords = "about us, digital consulting, innovation, strategy, technology consulting",
            Image = "https://test.vvgonline.net/assets/images/banners/about.png",
            OgType = "website",
            OgTitle = "About VVG ONLINE",
            OgDescription = "We are a strategic partner in navigating the complexities of the digital age. Learn more about our mission and philosophy.",
            OgImage = "https://test.vvgonline.net/assets/images/banners/about.png",
            OgUrl = "https://test.vvgonline.net/About",

            TwitterCard = "summary_large_image",
            TwitterSite = "@vvgonline",
            TwitterCreator = "@vvgonline",
            TwitterTitle = "About VVG ONLINE",
            TwitterDescription = "Learn about our mission to decode the complex digital landscape, design bespoke strategies, and deliver transformative results.",
            TwitterImage = "https://test.vvgonline.net/assets/images/twitter-cards/vvg-online-about-twitter-card.png"
        });
    }
}