@* Loading preloader *@
@if (IsLoading)
{
    <div class="preloader">
        <div class="spinner"></div>
        <p>Loading...</p>
    </div>
}

<style>
    .preloader {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: #0f172a;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .spinner {
        border: 4px solid #1f2937;
        border-top: 4px solid #ffdd33;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .preloader p {
        color: #ffdd33;
        margin-top: 20px;
        font-weight: 600;
    }
</style>

@code {
    [Parameter] public bool IsLoading { get; set; } = true;
}
