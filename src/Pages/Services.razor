@page "/services"
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>Services</PageTitle>

<h2>Services</h2>

@if (services is null)
{
    <p>Loading...</p>
}
else
{
    <div class="row">
        @foreach (var s in services)
        {
            <div class="col-md-6 mb-3">
                <div class="card p-3">
                    <h5>@s.title</h5>
                    <p>@s.description</p>
                </div>
            </div>
        }
    </div>
}

@code {
    class Service { public int id; public string? title; public string? description; }
    Service[]? services;

    protected override async Task OnInitializedAsync()
    {
        var doc = await Http.GetFromJsonAsync<ServiceDoc>("/data/services.json");
        services = doc?.services;
    }

    class ServiceDoc { public Service[]? services; }
}
